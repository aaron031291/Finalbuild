// Register event handlers
system.eventBus.subscribe("system:blockchain:initialized", (data) => {
  console.log("Blockchain initialized:", data);
});

system.eventBus.subscribe("system:transaction:confirmed", (data) => {
  console.log("Transaction confirmed:", data.transaction);
});

// Submit a transaction via events
system.eventBus.publish("system:transaction:submit", {
  transaction: {
    sender: "sender-address",
    recipient: "recipient-address",
    amount: 1.0,
  },
  callback: (error, result) => {
    if (error) {
      console.error("Transaction submission failed:", error);
    } else {
      console.log("Transaction submitted:", result);
    }
  },
});